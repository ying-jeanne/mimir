{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "prHourlyLimit": 4,
  "baseBranches": ["main", "release-2.8"],
  "packageRules": [
    {
      "matchBaseBranches": ["release-2.8"],
      "packagePatterns": ["*"],
      "enabled": false
    },
    {
      "groupName": "docker-dependencies",
      "matchManagers": ["dockerfile"],
      "matchUpdateTypes": ["minor", "patch", "major"],
      "matchPackagePatterns": ["*"]
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security_bot_updates"]
  },
  "osvVulnerabilityAlerts": true
}
